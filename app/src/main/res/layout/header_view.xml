<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchEditText"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="25dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/product_image_background"
            android:hint="@string/enter_product_name"
            android:inputType="text|textNoSuggestions"
            android:maxLines="1"
            android:paddingVertical="5dp"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textColorHint="@color/green"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/likesButton"
            android:layout_width="26dp"
            android:layout_height="22dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"
            android:layout_alignStart="@+id/searchEditText"
            android:background="@drawable/ic_heart_dark"
            android:contentDescription="@string/app_name"/>

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignEnd="@+id/searchEditText"
            android:background="@drawable/ic_baseline_search_24"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
</layout>

