<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/cream"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textViewPriceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/priceRange"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextMinPrice"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:inputType="number"
                android:textSize="18sp"
                android:textColorHint="@color/light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:background="@drawable/product_image_background"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewPriceTitle" />

            <EditText
                android:id="@+id/editTextMaxPrice"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:inputType="number"
                android:textColorHint="@color/light"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/product_image_background"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewPriceTitle" />

            <TextView
                android:id="@+id/textViewOkPrice"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/tags_background"
                android:textAlignment="center"
                android:layout_marginEnd="10dp"
                android:text="@string/ok"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewPriceTitle"
                tools:ignore="RtlSymmetry" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>